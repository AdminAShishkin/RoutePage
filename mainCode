        private void loadComboBox1()
        {
            string path = Directory.GetCurrentDirectory();
            string build = (path + "\\" + "Firms.txt");
            string[] lines = System.IO.File.ReadAllLines(build);
            comboBox1.Items.AddRange(lines);
            comboBox1.SelectedIndex = 0;
        }
